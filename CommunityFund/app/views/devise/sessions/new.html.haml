.container
  .col-md-4
  .container{style: "margin-top: 30px;"}
    .col-md-4
    = simple_form_for resource, as: resource_name, url: session_path(resource_name), input_html: {class: 'form-horiztonal'} do |f|
      %h3{class: 'form-header'} 
        Login
      %br
      .col-md-offset-2
        = f.error_notification

        - @errors = resource.errors
        -# TODO apparently devise stores field errors in here as a flash and not as model errors. Use this to get at them for whatever we plan to do with css
      .div{class: 'form-group has-warning', id: 'login-username'}
        %label{class: 'col-sm-2 col-sm-offset-2 control-label'}
          Username
        .col-sm-4
          %div{class: "input-group"}
            = f.text_field :username, required: true, autofocus: true, class: 'form-control', label: false, size: 60, id: 'login-username-input'
            .span{class: "glyphicon glyphicon-warning-sign form-control-feedback", id: 'signup-username-icon'}
      .div{class: 'form-group has-warning', id: 'login-password'}
        %label{class: 'col-sm-2 col-sm-offset-2 control-label'}
          Password
        .col-sm-4
          %div{class: "input-group"}
            = f.password_field :username, required: true, autofocus: true, class: 'form-control', label: false, size: 60, id: 'login-password-input'
            .span{class: "glyphicon glyphicon-warning-sign form-control-feedback", id: 'signup-username-icon'}
      - if devise_mapping.rememberable?
        .form-group
          %label{class: 'col-sm-2 col-sm-offset-2 control-label'}
            Remember Me?
          .col-sm-4
            = f.input :password_confirmation, as: :boolean, required: true, class: 'form-control', label: false
        .form-group
          .form-actions
            = f.button :submit, "Login", id: 'login-submit-button', class: 'btn btn-sm btn-primary btn-block'
