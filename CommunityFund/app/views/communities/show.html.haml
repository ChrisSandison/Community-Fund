.container
  .row
    .col-sm-9.col-md-9
      - if @new_join.present?
        .alert.alert-success
          Thank you for joining this Community, you will now receive updates from projects within this Community on your dashboard. 
      .jumbotron
        - if @community.banner.present?
          .project-banner
            = image_tag @community.banner.url
        - elsif current_user.admin?
          - if @community.banner.present?
            = link_to 'edit', 'communities/'+ params[:id] + '/edit_photo'
          - else
            = link_to 'new', 'communities/'+ params[:id] + '/edit_photo'

        %h3.inline.project-lead= "#{@community.name}: #{@community.description}"

      %ul.nav.nav-pills
        %li.active{role: "presentation"}
          %a{href: "#projects", data: {toggle: 'tab'}}
            %span.glyphicon.glyphicon-ice-lolly-tasted
              Projects
        %li{role: "presentation"}
          %a{href: "#discussion", data: {toggle: 'tab'}}
            %span.glyphicon.glyphicon-comment
              Discussion

      .tab-content
        #projects.tab-pane.fade.in.active
          .project-description
            - @community.projects.each do |p|
              .panel.panel-default
                .panel-body
                  = p.name

        #discussion.tab-pane.fade
          TODO discussion functionality

    .col-sm-3.col-md-3
      .panel.panel-primary
        .panel-body
          .funding-status
            .completion-amount
              Total donated to projects within this community: 
              = "$" + @community.total.to_s
      = render partial: 'moderate_buttons'